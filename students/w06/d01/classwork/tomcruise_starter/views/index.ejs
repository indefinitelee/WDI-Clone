<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>The Tom Cruise DB</title>
    <link rel="stylesheet" href="styles.css" media="screen" title="no title">
  </head>
  <body>
    <header>
      <h1>The Tom Cruise DB</h1>
    </header>
    <div class="wrapper">
      <div class="container">
        <h3> <%# movies.length %>  Results</h3>
        <ul class="results">
          <%# results will be displayed here %>
          <% for ( let i = 0; i < movies.length; i++) { %>
          <li class="movie-item">
           <img class="poster" src="<%= movies[i].Poster %>" alt="">
           <h4><%= movies[i].Title %></h4>
           <a href=/edit/<%= movie._id %> >
           <form class="save-favorite" action="/favorites" method="post">
            <input type="hidden" name="favorite[Title]" value="<%= movies[i].Title %>">
            <input type="hidden" name="favorite[Poster]" value="<%= movies[i].Poster %>">
            <input type="submit" value="Save">
          </form>
          </li>
          <% }; %>
        </ul>
      </div>
      <div class="container">
        <h3><%# favorites.length %> Favorites</h3>
        <ul class="favorites">
          <%# Saved favorite movies will be displayed here %>
          <% for ( let i = 0; i < favorites.length; i++) { %>
          <li class="movie-item">
           <img class="poster" src="<%= favorites[i].Poster %>" alt="">
           <h4><%= favorites[i].Title %></h4>
           <form class="" action="/favorites/<%= favorites[i]._id %>?_method=DELETE" method="post">
             <input type="submit" value="Delete">
           </form>
          </li>
          <% }; %>
        </ul>
      </div>
    </div>
  </body>
</html>
